<div class="header_top"><!--header_top-->
    <div class="container">
        <div class="row">
            <div class="col-sm-3 col-xs-5" id="menuPrincipal">
                <div id="menuBurger">
                    <div class="blocBarres">
                        <div class="blocCharge blocChargemiddle"></div>
                        <div class="blocCharge"></div>
                        <div class="blocCharge blocChargemiddle"></div>
                    </div>
                    <nav class="principal">
                        <ul>
                            <li><div class="gris fullBackground"></div><a href="{{ path('r_tech_app_homepage') }}">Accueil</a></li>
                            <li><div class="gris fullBackground"></div><a href="{{ path('r_tech_category') }}">Toutes les cat√©gories</a></li>

                                    {{ render(controller('RTechAppBundle:Category:list')) }}
                                <div class="search_box pull-right">
                                    <input type="text" placeholder="Rechercher" /><span style="margin-right: 6px;margin-top: -20px;margin-left: -22px; position: relative;z-index: 9" class="fa fa-search"></span>
                                </div>
                            </li>
                        </ul>
                    </nav>
                </div>
                <div class="logo pull-left pylos-logo">
                    <a href="{{ path('r_tech_app_homepage') }}">
                        <img src="{{ asset('bundles/public/images/logo.png') }}" alt="RadioTech" />
                    </a>
                </div>
            </div>
            <div class="col-sm-9 col-xs-7">
                <div class="social-icons pull-right">
                    <ul class="nav navbar-nav">
                        {% include 'RTechAppBundle:compoments:language.html.twig' %}
                        <li class="fb"><a target="_blank" href="https://fr-fr.facebook.com/"></a></li>
                        <li class="twitter"><a target="_blank" href="https://twitter.com/?lang=fr"></a></li>
                        <li class="linkedin"><a target="_blank" href="https://fr.linkedin.com/"></a></li>
                        <li class="connexion">
                            <a href=""></a>
                            <div class="blocConnect">
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <p>{{'layout.bonjour'|trans }} {{ app.user.firstname}}</p>
                                <a href="{{ path('fos_user_profile_show') }}" title="">{{ 'layout.profil'|trans }}</a>
                                <a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans }}</a>

                                <button type="button" class="btn btn-primary btn-lg fn-media-modal" data-toggle="modal" data-target="#myModal">
                                    {{ 'layout.add'|trans }}
                                </button>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('admin') }}?entity=Category&action=list" target="_blank">Admin</a>
                                {% endif %}

                            {% else %}
                                <a class="button" href="{{ path("fos_user_security_login") }}">Connexion</a>
                                <a class="button" href="{{ path('rtech_user_registration_register') }}">{{ 'layout.register'|trans }}</a>
                            {% endif %}
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div><!--/header_top-->


<!-- Modal -->
<div class="modal fade mediaModal-lg" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Ajouter un son</h4>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div id="ajoutSon">
                        {{ render(controller('RTechAppBundle:Media:addMedia')) }}
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>