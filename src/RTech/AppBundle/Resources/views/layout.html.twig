        <link rel="stylesheet" href="{{ asset('bundles/public/css/owl.carousel.css') }}">

        <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
        <script src="{{ asset('bundles/public/js/owl.carousel.min.js') }}"></script>
