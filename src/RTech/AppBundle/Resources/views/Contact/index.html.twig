{% extends 'RTechUserBundle::layout.html.twig' %}

{% block title %}Contact | {{ parent() }}{% endblock %}

{% block pylos_store_filariane %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumbs">
                    <ol class="breadcrumb">
                        <li><a href="{{ path('r_tech_app_homepage') }}">Accueil</a></li>
                        <li class="active" style="padding-left: 5px">Contact</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

 {% block rtech_user_content %}
    <div id="contact-page" >
        <div class="bg">
            <div class="row">
                <div class="col-sm-12">
                    <span class="h1">Contact Us</span>
                    {% include "RTechAppBundle:compoments:maps.html.twig" %}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-8">
                    <div class="contact-form">
                        <span class="h1">Get In Touch</span>
                        <div class="status alert alert-success" style="display: none"></div>
                        <form id="main-contact-form" class="contact-form row" name="contact-form" method="post">
                            <div class="form-group col-md-6">
                                <input type="text" name="name" class="form-control" required="required" placeholder="Name">
                            </div>
                            <div class="form-group col-md-6">
                                <input type="email" name="email" class="form-control" required="required" placeholder="Email">
                            </div>
                            <div class="form-group col-md-12">
                                <input type="text" name="subject" class="form-control" required="required" placeholder="Subject">
                            </div>
                            <div class="form-group col-md-12">
                                <textarea name="message" id="message" required="required" class="form-control" rows="8" placeholder="Your Message Here"></textarea>
                            </div>
                            <div class="form-group col-md-12">
                                <input type="submit" name="submit" class="btn-success" value="Submit">
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="contact-info">
                        <span class="h1">Contact Info</span>
                        <address>
                            <p>WebRadio Inc.</p>
                            <p>935 W. Webster Ave New Streets Chicago, IL 60614, NY</p>
                            <p>Newyork USA</p>
                            <p>Mobile: +2346 17 38 93</p>
                            <p>Fax: 1-714-252-0026</p>
                            <p>Email: info@e-shopper.com</p>
                        </address>

                    </div>
                </div>
            </div>
        </div>
    </div><!--/#contact-page-->

     {% endblock rtech_user_content %}