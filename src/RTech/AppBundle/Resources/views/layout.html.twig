<body>

{#
    le bloc header qui sépare le header en trois partie.Cela laisse la possibilité au cours d'un extends
    d'inclure la partie qu'on veut
#}
{% block pylos_store_header %}
    {# header top #}
    {% block header_top %}
        {% include 'RTechAppBundle:compoments:header_top.html.twig' %}
    {% endblock %}
{% endblock %}

{% block pylos_store_carousel %}
{% endblock %}


<div class="row">
    <div id="content">
        {% block body %}

        {% endblock %}
    </div>
</div>

<div class="lecteur">
    <div class="row">
        <div class="fermer">X</div>
        <div class="col-xs-4 infos">
            <div class="blocIMG">
                <img src="" />
            </div>
            <div class="titreNom"></div>
        </div>
        <div class="col-xs-8">
            <div class="lecteurAudio">
                <div class="coeur">
                    <img src="{{ asset('bundles/public/images/coeur.png') }}" />
                </div>
                <a class="pp" id="play" href="">
                </a>
                <p class="audioDebut">0</p>
                <div id="ecoulement">
                    <div class="progress"></div>
                </div>
                <p class="audioFin"></p>
                <p class="volume">
                    <input type="range" id="seek" value="0.5" min="0" max="1" step="0.01"/>
                </p>
            </div>
            <audio src="" id="audio"></audio>
        </div>
    </div>
</div>

{{ include("RTechAppBundle:Compoments:footer.html.twig") }}
{% block javascripts %}
        {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="{{ asset('bundles/public/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/public/js/points.js') }}"></script>
    <script src="{{ asset('bundles/public/js/jsperso.js') }}"></script>
    <script src="{{ asset('bundles/public/js/radiotech.js') }}"></script>
{% endblock %}
</body>
</html>